<div class="pagetitle">
  <h1>Viewing Role</h1>
</div>
<section class="section">
  <div class="row">
    <div class="col-lg-6">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Role data</h5>
          <ul class="nav nav-tabs nav-tabs-bordered" id="role-data" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="role-tab" data-bs-toggle="tab" data-bs-target="#role-data " type="button" role="tab" aria-controls="role" aria-selected="true">Info</button>
            </li>
          </ul>
          <div class="tab-content pt-2" id="dataTabContent">
            <div class="tab-pane fade show active" id="role-data" role="tabpanel" aria-labelledby="role-tab"><br/>
              <p>
                <strong>Name:</strong>
                <%= @role.name %>
              </p>

              <p>
                <strong>Description:</strong>
                <%= @role.description %>
              </p>

              <p>
                <strong>Assosciated users:</strong>
                <%= @assosciated_users %>
              </p>
              <% if can? :update, Role %>
                <%= link_to 'Edit', edit_role_path(@role), class: "btn btn-primary btn-sm" %>
              <% end %>
              <%= link_to 'Back', roles_path, class: "btn btn-secondary btn-sm" %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>