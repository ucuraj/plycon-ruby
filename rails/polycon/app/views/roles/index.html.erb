<div class="pagetitle">
  <h1>Roles</h1>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <div class="d-inline-flex justify-content-between w-100">
            <div>
              <h5 class="card-title">Roles list</h5>
              <p>From this list you will be able to manage roles</p>
            </div>
            <% if can? :create, Role %>
              <div class="mt-4 mb-4">
                <%= link_to new_role_path, class: "btn btn-success btn-sm" do %>
                  <i class="bi bi-plus-circle me-1"></i>Add Role
                <% end %>
              </div>
            <% end %>
          </div>
          <table class="table datatable">
            <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Phone</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td><%= role.name %></td>
                <td><%= role.description %></td>
                <% if can? :read, Role %>
                  <td class="td-action"><%= link_to 'Show', role, class: "badge bg-primary" %></td>
                <% end %>
                <% if can? :update, Role %>
                  <td class="td-action"><%= link_to 'Edit', edit_role_path(role), class: "badge bg-warning" %></td>
                <% end %>
                <% if can? :destroy, Role %>
                  <td class="td-action"><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: "badge bg-danger" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
