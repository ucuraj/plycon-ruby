<div class="pagetitle">
  <h1>Users</h1>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <div class="d-inline-flex justify-content-between w-100">
            <div>
              <h5 class="card-title">Users list</h5>
              <p>From this list you will be able to manage users</p>
            </div>
            <% if can? :create, User %>
              <div class="mt-4 mb-4">
                <%= link_to new_user_path, class: "btn btn-success btn-sm" do %>
                  <i class="bi bi-plus-circle me-1"></i>Add User
                <% end %>
              </div>
            <% end %>
          </div>
          <table class="table datatable">
            <thead>
            <tr>
              <th>User</th>
              <th>Email</th>
              <th>Role</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role.name %></td>
                <% if can? :read, User %>
                  <td class="td-action"><%= link_to 'Show', user, class: "badge bg-primary" %></td>
                <% end %>
                <% if can? :update, User %>
                  <td class="td-action"><%= link_to 'Edit', edit_user_path(user), class: "badge bg-warning" %></td>
                <% end %>
                <% if can? :destroy, User %>
                  <td class="td-action"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "badge bg-danger" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
