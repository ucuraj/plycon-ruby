<section class="section">
  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Patient</h5>
          <%= form_with(model: patient) do |form| %>
            <% if patient.errors.any? %>
              <div id="error_explanation">
                <h5><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h5>

                  <% patient.errors.each do |error| %>
                      <div class="alert alert-danger" role="alert">
                        <%= error.full_message %>
                      </div>
                  <% end %>
              </div>
            <% end %>
            <div class="col-12">
              <%= form.label :first_name, class: "col-sm-2 col-form-label" %>
              <%= form.text_field :first_name, class: "form-control" %>
            </div>

            <div class="col-12">
              <%= form.label :last_name, class: "col-sm-2 col-form-label" %>
              <%= form.text_field :last_name, class: "form-control" %>
            </div>

            <div class="col-12">
              <%= form.label :phone, class: "col-sm-2 col-form-label" %>
              <%= form.text_field :phone, class: "form-control" %>
            </div>

            <br/>
            <div class="actions">
              <%= form.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
