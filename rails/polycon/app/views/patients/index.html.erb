<div class="pagetitle">
  <h1>Patients</h1>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <div class="d-inline-flex justify-content-between w-100">
            <div>
              <h5 class="card-title">Patients list</h5>
              <p>From this list you will be able to manage patients</p>
            </div>
            <% if can? :create, Patient %>
              <div class="mt-4 mb-4">
                <%= link_to new_patient_path, class: "btn btn-success btn-sm" do %>
                  <i class="bi bi-plus-circle me-1"></i>Add Patient
                <% end %>
              </div>
            <% end %>
          </div>
          <table class="table datatable">
            <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Phone</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td><%= patient.first_name %></td>
                <td><%= patient.last_name %></td>
                <td><%= patient.phone %></td>
                <% if can? :read, Patient %>
                  <td class="td-action"><%= link_to 'Show', patient, class: "badge bg-primary" %></td>
                <% end %>
                <% if can? :update, Patient %>
                  <td class="td-action"><%= link_to 'Edit', edit_patient_path(patient), class: "badge bg-warning" %></td>
                <% end %>
                <% if can? :destroy, Patient %>
                  <td class="td-action"><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "badge bg-danger" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
