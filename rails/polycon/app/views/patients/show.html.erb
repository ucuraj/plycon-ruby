<div class="pagetitle">
  <h1>Viewing Patient</h1>
</div>
<section class="section">
  <div class="row">
    <div class="col">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Patient data</h5>
          <ul class="nav nav-tabs nav-tabs-bordered" id="patient-data" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="patient-tab" data-bs-toggle="tab" data-bs-target="#patient-data " type="button" role="tab" aria-controls="patient" aria-selected="true">Info</button>
            </li>
          </ul>
          <div class="tab-content pt-2" id="dataTabContent">
            <div class="tab-pane fade show active" id="patient-data" role="tabpanel" aria-labelledby="patient-tab"><br/>
              <p>
                <strong>First name:</strong>
                <%= @patient.first_name %>
              </p>

              <p>
                <strong>Last name:</strong>
                <%= @patient.last_name %>
              </p>
              <p>
                <strong>Phone:</strong>
                <%= @patient.phone %>
              </p>
              <% if can? :update, Patient %>
                <%= link_to 'Edit', edit_patient_path(@patient), class: "btn btn-primary btn-sm" %>
              <% end %>
              <%= link_to 'Back', patients_path, class: "btn btn-secondary btn-sm" %>
            </div>
          </div>

        </div>
      </div>
      <br/>
      <h3>Patient appointments</h3>
      <hr/>
      <% @appointments.each do |appointment| %>
        <%= render 'appointments/show', "@appointment": appointment, locals: { show_actions: false } %>
      <% end %>
    </div>
  </div>
</section>