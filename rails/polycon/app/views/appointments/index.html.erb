<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
  <tr>
    <th>Observations</th>
    <th>Date</th>
    <th>Patient</th>
    <th>Professional</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.observations %></td>
      <td><%= appointment.date %></td>
      <td><%= appointment.patient_id %></td>
      <td><%= appointment.professional_id %></td>
      <% if can? :read, Appointment %>
        <td><%= link_to 'Show', appointment %></td>
      <% end %>
      <% if can? :update, Appointment %>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
      <% end %>
      <% if can? :destroy, Appointment %>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Appointment %>
  <%= link_to 'New Appointment', new_appointment_path %>
<% end %>
